generator client {
  provider = "prisma-client"
  
}

datasource db {
  provider = "postgresql"
}



model User{
  id Int @id @default(autoincrement())
  username String @unique
  firstname String 
  lastname String
  password String
  blogs     Blog[]
}
model Blog{
  id Int @id @default(autoincrement())
  title String
  content String
  posted_on DateTime @default(now())
  userId Int
  user  User  @relation(fields: [userId], references: [id])

}

